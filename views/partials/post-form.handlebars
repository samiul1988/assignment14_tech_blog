<section class="post_card new_post_form display_none" id="newPostForm">
    <div class="post_title_container">
        <div class="post_title">
            Create New Post
        </div>
    </div>
    <div class="post_body">
        <form class="post_form" id="newPostForm">
            <div class="form_row">
                <label class="display_block" for="newPostTitle">Title</label>
                <input class="post_form_input display_block" type="text" id="newPostTitle"/>
            </div>
            <div class="form_row">
                <label class="display-block" for="newPostContent">Content</label>
                <textarea rows="5" class="post_form_input display_block" id="newPostContent"></textarea>
            </div>
            <div>
                <button type="submit" class="btn form_btn">Create Post</button>
            </div>
        </form>
    </div>
</section>