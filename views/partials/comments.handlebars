<section class="post_card comments_container">
    <div class="post_title_container">
        <div class="post_title">
            Comments
        </div>
    </div>
    {{#each this.post.comments}}
    <div class="comment_body">
        <div>
            <div class="comment_text">
            {{comment_text}}
        </div>
        <div class="comment_meta_data">
            &#8594; {{user.username}}, {{format_date created_at}} 
        </div>
        </div>
        {{#if (is_same user.username @root.data.current_user) }}
        <div>
            <button class="btn remove_btn" id="removeCommentBtn" data-id="{{id}}" type="button">Remove</button>
        </div>
        {{/if}}
    </div>
    {{/each}}
</section>