<div class="post_card comment_form">
    <div class="post_title_container">
        <div class="post_title">
            Add a Comment
        </div>
    </div>
    <div class="post_body">
        <form class="post_form" id="new-comment-form">
            <div class="form_row">
                <label class="display-block" for="newCommentContent">Comment</label>
                <textarea class="post_form_input display_block" id="newCommentContent"></textarea>
            </div>
            <div>
                <button type="submit" class="btn form_btn" id="submitCommentBtn">Submit Comment</button>
            </div>
        </form>
    </div>
</div>
